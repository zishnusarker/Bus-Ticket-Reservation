<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common.LoginSignUp.MakeSelectionForgetPass"
    android:padding="20dp"
    android:background="@drawable/grey_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_btn"
            android:onClick="back"
            android:tint="#070707"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="make\nselection"
            android:textAllCaps="true"
            android:textColor="#070707"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Select which contact details should we use\nto reset your password ? "
            android:textSize="18sp"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="15dp"
            android:background="@color/btColor"
            android:padding="20dp">

            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/phone_android_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Via mobile:"
                android:textColor="#070707"
                android:textSize="20sp"
                android:layout_toRightOf="@id/mobile_icon"
                android:layout_marginTop="35dp"

                />

            <TextView
                android:id="@+id/mobile_title_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="01234567891"
                android:textSize="16sp"
                android:layout_toRightOf="@id/mobile_icon"
                android:layout_below="@id/mobile_title"
                android:layout_marginTop="2dp"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:onClick="otpVerifyPage"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="15dp"
            android:background="@color/btColor"
            android:padding="20dp">

            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/big_mail_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/mail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Via mail:"
                android:textColor="#070707"
                android:textSize="20sp"
                android:layout_toRightOf="@id/mail_icon"
                android:layout_marginTop="40dp"

                />

            <TextView
                android:id="@+id/mail_title_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Xxxxx@xxxx.com"
                android:textSize="16sp"
                android:layout_toRightOf="@id/mail_icon"
                android:layout_below="@id/mail_title"
                android:layout_marginTop="2dp"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:onClick="otpVerifyPage"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>